@model WebWooden.Models.TbMenu

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
    <section class="section">
      <div class="row">
        <div class="col-lg-12">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Thêm Menu</h5>

              <!-- General Form Elements -->
             
                <form asp-action="Create" asp-area="Admin">       
                <div class="row mb-3">
                  <label asp-for="Title" for="inputText" class="col-sm-2 col-form-label">Tiêu đề</label>
                  <div class="col-sm-10">
                  <input asp-for="Title" type="text" class="form-control">
                  <span asp-validation-for="Title" class="text-danger"></span>
                  </div>
                </div>
                <div class="row mb-3">
                  <label asp-for="Alias" for="inputText" class="col-sm-2 col-form-label"></label>
                  <div class="col-sm-10">
                  <input asp-for="Alias" class="form-control" />
                  </div>
                  <span asp-validation-for="Alias" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                  <label asp-for="Description" for="inputText" class="col-sm-2 col-form-label">Mô tả</label>
                  <div class="col-sm-10">
                  <input asp-for="Description" type="password" class="form-control">
                  </div>
                  <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                  <label asp-for="Levels" for="inputText" class="col-sm-2 col-form-label">Mức</label>
                  <div class="col-sm-10">
                  <input asp-for="Levels" type="text" class="form-control">
                  </div>
                  <span asp-validation-for="Levels" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for="ParentId" for="inputText" class="col-sm-2 col-form-label">Menu Cha</label>
                    <div class="col-sm-10">
                        <input asp-for="ParentId" type="text" class="form-control">
                    </div>
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>
                <div class="row mb-3">
                    <label asp-for="Position" for="inputText" class="col-sm-2 col-form-label">Vị trí</label>
                    <div class="col-sm-10">
                        <input asp-for="Position" type="text" class="form-control">
                    </div>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
                <fieldset class="row mb-3">
                    <legend class="col-form-label col-sm-2 pt-0">Trạng thái</legend>
                    <div class="col-sm-10">
                        <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="radio" name="gridRadios" id="gridRadios1" value="option1" checked>
                        <label asp-for="IsActive" class="form-check-label" for="gridRadios1">
                                Hoạt động 
                        </label>
                        </div>
                        <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="radio" name="gridRadios" id="gridRadios2" value="option2">
                        <label asp-for="IsActive"  class="form-check-label" for="gridRadios2">
                                Không hoạt động
                        </label>
                        </div>
                    </div>
                </fieldset>
                <div class="row mb-3">                 
                  <div class="col-sm-10">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                  </div>
                </div>
              </form><!-- End General Form Elements -->

            </div>
          </div>

        </div>

       
      </div>
    </section>