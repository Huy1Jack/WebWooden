@model WebWooden.Models.TbMenu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Sửa Menu</h5>

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row mb-3">
                        <label asp-for="Title" for="inputText" class="col-sm-2 col-form-label">Tiêu đề</label>
                        <div class="col-sm-10">
                            <input asp-for="Title" type="text" class="form-control" readonly>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Alias" for="inputText" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Alias" class="form-control" readonly>
                        </div>
                        <span asp-validation-for="Alias" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Description" for="inputText" class="col-sm-2 col-form-label">Mô tả</label>
                        <div class="col-sm-10">
                            <input asp-for="Description" type="text" class="form-control" readonly>
                        </div>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Levels" for="inputText" class="col-sm-2 col-form-label">Mức</label>
                        <div class="col-sm-10">
                            <input asp-for="Levels" type="text" class="form-control" readonly>
                        </div>
                        <span asp-validation-for="Levels" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="ParentId" for="inputText" class="col-sm-2 col-form-label">Menu Cha</label>
                        <div class="col-sm-10">
                            <input asp-for="ParentId" type="text" class="form-control" readonly>
                        </div>
                        <span asp-validation-for="ParentId" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Position" for="inputText" class="col-sm-2 col-form-label">Vị trí</label>
                        <div class="col-sm-10">
                            <input asp-for="Position" type="text" class="form-control" readonly>
                        </div>
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>

                    <fieldset class="row mb-3">
                        <legend class="col-form-label col-sm-2 pt-0">Trạng thái</legend>
                        <div class="col-sm-10">
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="radio" value="true" id="gridRadios1" readonly>
                                <label class="form-check-label" for="gridRadios1">
                                    Hoạt động
                                </label>
                            </div>
                            <div class="form-check">
                                <input asp-for="IsActive" class="form-check-input" type="radio" value="false" id="gridRadios2" readonly>
                                <label class="form-check-label" for="gridRadios2">
                                    Không hoạt động
                                </label>
                            </div>
                        </div>
                    </fieldset>    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MenuId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
                </div>
            </div>

        </div>


    </div>
</section>